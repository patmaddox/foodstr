<h1>Create a new restaurant</h1>

<%= error_messages_for :restaurant %>

<% form_for(@restaurant) do |f| %>
  <div class="form_element">
    <%= f.label :name %>*
    <%= f.text_field :name %>
  </div>

  <div class="form_element">
    <%= f.label :address_street %>*
    <%= f.text_field :address_street %>
  </div>

  <div class="form_element">
    <%= f.label :address_street2 %>
    <%= f.text_field :address_street2 %>
  </div>

  <div class="form_element">
    <%= f.label :address_city %>*
    <%= f.text_field :address_city %>
  </div>

  <div class="form_element">
    <%= f.label :address_state %>*
    <%= f.text_field :address_state %>
  </div>

  <div class="form_element">
    <%= f.label :address_zip %>*
    <%= f.text_field :address_zip %>
  </div>

  <%= submit_tag "Create!" %>
<% end %>


