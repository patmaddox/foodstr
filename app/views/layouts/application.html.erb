<html>
  <head>
    <title>Foodstr</title>
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag "jquery" %>
    <%= javascript_include_tag "jquery-ui" %>
    <%= javascript_include_tag "jrails" %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <div id="header">      
      <div id="account_links">
        <% if logged_in? %>
          Welcome, <%= current_user.first_name %>!
          <%= link_to "My Dashboard", dashboard_url %>
          <%= link_to "Log out", logout_url %>
        <% else %>
          <%= link_to "Login/Signup", login_url %>
        <% end %>
      </div>

      <%= link_to image_tag("small_ugly_logo.png", :id => "logo"), homepage_url %>      
    </div>

    <div id="content">
      <% [:success, :error, :notice].each do |message| %>
        <% if flash[message] %>
          <div class="flash_<%= message %>">
            <%= flash[message] %>
          </div>
        <% end %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
